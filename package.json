{
  "name": "applicational-atomic-design-for-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && npm run lint:scss",
    "format": "npm run prettier:fix && npm run eslint:fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint:scss": "stylelint 'src/**/*.scss' --syntax scss --fix ; exit 0",
    "lint:js": "next lint",
    "test:unit": "jest --passWithNoTests",
    "test:unit:update": "jest --passWithNoTests --updateSnapshot",
    "type:check": "tsc",
    "cypress": "cypress",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^6.15.4",
    "swr": "^0.5.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/react": "^18.0.21",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.2.3",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "lint-staged": "^10.5.4",
    "stylelint": "^13.13.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "ts-node": "^9.1.1",
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "axios": "^0.21.1",
    "babel-jest": "^26.6.3",
    "cypress": "^5.6.0",
    "eslint-config-next": "^11.0.0",
    "husky": "^4.3.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.{css,scss}": "stylelint"
  }
}
